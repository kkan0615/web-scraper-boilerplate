{
  "name": "vue3-test",
  "author": "Youngin Kwak",
  "version": "0.0.8",
  "private": true,
  "main": "./dist/main/main.cjs",
  "scripts": {
    "dev": "cross-env NODE_ENV=development ts-node scripts/devServer.ts",
    "dev:renderer": "vite packages/renderer",
    "build:test": "vite packages/renderer",
    "build:window": "ts-node scripts/build.ts && electron-builder",
    "release": "ts-node scripts/build.ts && electron-builder --publish=always",
    "test": "vitest",
    "test:once": "vitest run",
    "test:main": "vitest run -r packages/main --passWithNoTests",
    "test:renderer": "vitest run -r packages/renderer --passWithNoTests",
    "eslint:fix": "eslint --fix ./**/*"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kkan0615/vue3-typescript-electron-boilerplate"
  },
  "build": {
    "appId": "com.app.my.first.eletron",
    "productName": "My-first-electron",
    "copyright": "Copyright Â© 2022 ${author}",
    "publish": [
      {
        "provider": "github",
        "private": true,
        "owner": "kkan0615",
        "repo": "vue3-typescript-electron-boilerplate"
      }
    ],
    "mac": {
      "category": "public.app-category.utilities"
    },
    "win": {
      "publish": [
        "github"
      ],
      "target": [
        "zip",
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "dist/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release"
    }
  },
  "dependencies": {
    "@vueuse/core": "^9.0.2",
    "@vueuse/electron": "^9.0.2",
    "electron-is-dev": "^2.0.0",
    "electron-updater": "^5.0.5",
    "vue": "^3.2.25",
    "winston": "^3.8.1"
  },
  "devDependencies": {
    "@types/electron": "^1.6.10",
    "@types/node": "^17.0.41",
    "@typescript-eslint/parser": "^5.27.1",
    "@vitejs/plugin-vue": "^2.3.3",
    "@vue/test-utils": "^2.0.2",
    "cross-env": "^7.0.3",
    "electron": "^19.0.4",
    "electron-builder": "^23.0.3",
    "eslint": "^8.17.0",
    "eslint-plugin-vue": "^9.1.0",
    "happy-dom": "^6.0.4",
    "husky": "^8.0.1",
    "sass": "^1.53.0",
    "ts-node": "^10.8.2",
    "typescript": "^4.5.4",
    "vite": "^3.0.0",
    "vitest": "^0.20.2",
    "vue-tsc": "^0.34.7"
  }
}
